[Unit]
Description=Read and archive data from a Bresser weather station

[Service]
User=root
WorkingDirectory=/home/pi/homecontrol/shelly
ExecStart=/usr/bin/bash -c 'cd /home/pi/homecontrol/shelly/ && source /home/pi/vbresser/bin/activate && python shellyproxy.py'
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target